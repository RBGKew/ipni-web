<div id="c-page-body" class="panel panel-default c-publication">
  <div class="panel-heading detail-heading">
    {{#with bhlTitleLinks}}
    <a class="bhl btn btn-xs btn-default pull-right" href="{{this.[0]}}" target="_blank" data-toggle="tooltip" data-placement="top" title="Read this publication in BHL">BHL</a>
    {{/with}}
    <h2><span class="glyphicon glyphicon-book glyphicon-in-title"></span>{{title}}</h2>
  </div>

  <div class="panel-body">
    {{#if suppressed}}
      <div class="alert alert-danger" role="alert"><strong>This record is suppressed.</strong> This can happen for a variety of reasons and is only accessible to preserve persistent identifiers.</div>
    {{/if}}
    <dl>
      <dt>Standard Form</dt><dd class="stdForm">{{abbreviation}}</dd>
      <dt>IPNI Identifier</dt><dd>{{id}}</dd>
      {{#if isbn}}<dt>ISBN</dt><dd>{{isbn}}</dd>{{/if}}
      {{#if issn}}<dt>ISSN</dt><dd>{{issn}}</dd>{{/if}}
      {{#if date}}<dt>Dates</dt><dd>{{breakLines date}}</dd>{{/if}}
      {{#if lcNumber}}<dt>Library of Congress Number</dt><dd>{{lcNumber}}</dd>{{/if}}
      {{#if bphNumber}}<dt>BPH Identifier</dt><dd>{{bphNumber}}</dd>{{/if}}
      {{#if precededBy}}<dt>Preceded By</dt><dd>{{precededBy}}</dd>{{/if}}
      {{#if supercededBy}}<dt>Superceded By</dt><dd>{{supercededBy}}</dd>{{/if}}
      {{#if comments}}<dt>Comments</dt><dd>{{comments}}</dd>{{/if}}
      {{#if remarks}}<dt>Remarks</dt><dd>{{remarks}}</dd>{{/if}}
      {{#if tl2Author}}<dt>Author</dt><dd>{{tl2Author}}</dd>{{/if}}
      {{#if tl2Number}}<dt>TL-2 Number</dt><dd>{{tl2Number}}</dd>{{/if}}
      {{#if hasBhlLinks}}
      <dt id="bhl-links">BHL</dt>
      <dd>
        {{#each bhlTitleLinks}}
        <p>Read this <a href="{{this}}" target="_blank">publication</a></p>
        {{/each}}
        {{#each bhlPageLinks}}
        <p>View the <a href="{{this}}" target="_blank">TL-2 metadata</a> for this publication</p>
        {{/each}}
      </dd>
      {{/if}}
    </dl>
    <div class="names-in-page">
    </div>
    <a class="hidden show-full-record publication-link" href="{{url}}"> Full Record </a>
  </div>
</div>
