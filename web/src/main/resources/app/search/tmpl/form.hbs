<div class="c-search">
  <div class="input-group">
    <input type="text" class="form-control" id="search" placeholder="Search by plant name, author or publication"/>
    <div class="input-group-btn">
      <button type="button" class="btn btn-default" id="search-button">
        <span class="glyphicon glyphicon-search"></span>
      </button>
      <button type="button" class="btn btn-default btn-advanced-search" data-toggle="dropdown" id="advanced-search-button" aria-haspopup="true" aria-expanded="true">
        <span class="glyphicon glyphicon-menu-down"></span>
      </button>
      <div class="dropdown-menu dropdown-menu-right panel panel-default" id="advanced-search" aria-labeledby="advanced-search-button">
        <div class="panel-body">
          <form class="search-form search-plant-name">
            <button type="submit" class="btn btn-xs search">Search</button>
            <button type="button" class="btn btn-xs clear">Clear</button>
            <b>Search Plant Name Database</b>
            <div class="row">
              <span class="has-float-label">
                <input type="text" class="form-control" id="family" name="family" placeholder="Family" autocomplete="off" />
                <label for="family">Family</label>
              </span>
              <span class="has-float-label">
                <input type="text" class="form-control" id="genus" name="genus" placeholder="Genus" autocomplete="off" />
                <label for="genus">Genus</label>
              </span>
              <span class="has-float-label">
                <input type="text" class="form-control" id="species" name="species" placeholder="Species" autocomplete="off" />
                <label for="species">Species</label>
              </span>
            </div>

            <div class="row">
              <span class="has-float-label">
                <input type="text" class="form-control" id="infrafamily" name="infrafamily" placeholder="Infrafamily" autocomplete="off" />
                <label for="infrafamily">Infrafamily</label>
              </span>
              <span class="has-float-label">
                <input type="text" class="form-control" id="infragenus" name="infragenus" placeholder="Infragenus" autocomplete="off" />
                <label for="infragenus">Infragenus</label>
              </span>
              <span class="has-float-label">
                <input type="text" class="form-control" id="infraspecies" name="infraspecies" placeholder="Infraspecies" autocomplete="off" />
                <label for="infraspecies">Infraspecies</label>
              </span>
            </div>

            <div class="row">
              <span class="has-float-label">
                <input type="text" class="form-control" id="author-std-form" name="name author" placeholder="Author (standard form)" autocomplete="off" />
                <label for="author-std-form">Author (standard form)</label>
              </span>
              <label class="checkbox-inline">
                <input type="checkbox" id="publishing-author-only" /> Publishing author only
              </label>
            </div>

            <div class="row">
              <span class="has-float-label">
                <input type="text" class="form-control" id="published-in" name="published in" placeholder="Published in (standard form)" autocomplete="off" />
                <label for="published-in">Published in (standard form)</label>
              </span>
              <span class="has-float-label">
                <input type="text" class="form-control" id="name-id" name="name id" placeholder="Plant name ID" autocomplete="off" />
                <label for="name-id">Plant name ID</label>
              </span>
            </div>

            <span class="help-block">Years must be specified in 'YYYY' format</span>
            <div class="row">
              <span class="has-float-label">
                <input type="text" class="form-control" id="year-published" name="published" placeholder="Year published" autocomplete="off" />
                <label for="year-published">Year published</label>
              </span>
              <span class="has-float-label">
                <input type="text" class="form-control" id="published-after" name="published after" placeholder="Published after year" autocomplete="off" />
                <label for="published-after">Published after year</label>
              </span>
              <span class="has-float-label">
                <input type="text" class="form-control" id="published-before" name="published before" placeholder="Published before year" autocomplete="off" />
                <label for="published-before">Published before year</label>
              </span>
            </div>

            <span class="help-block">Dates must be specified in 'YYYY-MM-DD' format</span>
            <div class="row">
              <span class="has-float-label">
                <input type="text" class="form-control date" id="added-after" name="added after" placeholder="Records added after" autocomplete="off" />
                <label for="added-after">Records added after</label>
              </span>
              <span class="has-float-label">
                <input type="text" class="form-control date" id="added-before" name="added before" placeholder="Records added before" autocomplete="off" />
                <label for="added-before">Records added before</label>
              </span>
            </div>
            <div class="row">
              <span class="has-float-label">
                <input type="text" class="form-control date" id="modified-after" name="modified after" placeholder="Records modified after" autocomplete="off" />
                <label for="modified-after">Records modified after</label>
              </span>
              <span class="has-float-label">
                <input type="text" class="form-control date" id="modified-before" name="modified before" placeholder="Records modified before" autocomplete="off" />
                <label for="modified-before">Records modified before</label>
              </span>
            </div>
          </form>

          <form class="search-form search-author">
            <button type="submit" class="btn btn-xs search">Search</button>
            <button type="button" class="btn btn-xs clear">Clear</button>
            <b>Search Author Database</b>
            <div class="row">
              <span class="has-float-label">
                <input type="text" class="form-control" id="author-std" name="author std" placeholder="Author (standard form)" autocomplete="off" />
                <label for="author-std">Author (standard form)</label>
              </span>
              <span class="has-float-label">
                <input type="text" class="form-control" id="author-forename" name="author forename" placeholder="Author forename" autocomplete="off" />
                <label for="author-forename">Author forename</label>
              </span>
              <span class="has-float-label">
                <input type="text" class="form-control" id="author-surname" name="author surname" placeholder="Author surname" autocomplete="off" />
                <label for="author-surname">Author surname</label>
              </span>
            </div>
            <div class="row">
              <span class="has-float-label">
                <input type="text" class="form-control" id="author-id" name="author id" placeholder="Author ID" autocomplete="off" />
                <label for="author-id">Author ID</label>
              </span>
            </div>
          </form>

          <form class="search-form search-publication">
            <button type="submit" class="btn btn-xs search">Search</button>
            <button type="button" class="btn btn-xs clear">Clear</button>
            <b>Search Publication Database</b>
            <div class="row">
              <span class="has-float-label">
                <input type="text" class="form-control" id="publication-std" name="publication std" placeholder="Publication (standard form)" autocomplete="off" />
                <label for="publication-std">Publication (standard form)</label>
              </span>
              <span class="has-float-label">
                <input type="text" class="form-control" id="publication-title" name="publication" placeholder="Publication title" autocomplete="off" />
                <label for="publication-title">Publication title</label>
              </span>
              <span class="has-float-label">
                <input type="text" class="form-control" id="publication-id" name="publication id" placeholder="Publication ID" autocomplete="off" />
                <label for="publication-id">Publication ID</label>
              </span>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
