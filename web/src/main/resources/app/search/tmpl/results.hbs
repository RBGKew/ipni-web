<div id="c-page-body" class="panel panel-default c-search-results">
  <div class="panel-heading">
      <div class="btn-group filter-by header-buttons">
        <button class="btn btn-xs btn-default disabled" >Filter by:</button>
        <button type="button" class="btn btn-xs btn-default{{highlight f "f_familial"}}" id="f_familial">Familial</button>
        <button type="button" class="btn btn-xs btn-default{{highlight f "f_infrafamilial"}}" id="f_infrafamilial">Infrafamilial</button>
        <button type="button" class="btn btn-xs btn-default{{highlight f "f_generic"}}" id="f_generic">Generic</button>
        <button type="button" class="btn btn-xs btn-default{{highlight f "f_infrageneric"}}"  id="f_infrageneric">Infrageneric</button>
        <button type="button" class="btn btn-xs btn-default{{highlight f "f_specific"}}" id="f_specific">Specific</button>
        <button type="button" class="btn btn-xs btn-default{{highlight f "f_infraspecific"}}" id="f_infraspecific">Infraspecific</button>
        <button type="button" class="btn btn-xs btn-default{{highlight f "f_hybrid"}}"  id="f_hybrid"> Hybrid</button>
      </div>
      <div class="pull-right">
      <div class="btn-group header-buttons">
        <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Sort by <span class="caret"></span></button>
        <ul class="sort-by dropdown-menu dropdown-menu-right">
          <li class="{{highlight sort "name_asc"}}"><a id="name_asc" href="#">Name A-Z</a></li>
          <li class="{{highlight sort "name_desc"}}"><a id="name_desc" href="#">Name Z-A</a></li>
          <li class="{{highlight sort "published_asc"}}"><a id="published_asc" href="#">Date Published - Oldest first</a></li>
          <li class="{{highlight sort "published_desc"}}"><a id="published_desc" href="#">Date Published - Newest first</a></li>
        </ul>
      </div>
      <button type="button" class="btn btn-xs btn-info show-detailed-record header-buttons">{{#if expanded}}Collapse{{else}}Expand{{/if}} Results</button>
      <button type="button" class="btn btn-xs btn-info download header-buttons">Download <span class="glyphicon glyphicon-download"></button>
    </div>
    <button type="button" class="btn expand-menu" data-toggle="collapse" data-target="#menu"><span class="glyphicon glyphicon-menu-hamburger pull-right"></span></button>
    <div id="menu" class="collapse pull-right">

      <div class="btn-group filter-by">
        <button class="btn btn-default disabled" >Filter by:</button>
        <button type="button" class="btn  btn-default{{highlight f "f_familial"}}" id="f_familial">Familial</button>
        <button type="button" class="btn  btn-default{{highlight f "f_infrafamilial"}}" id="f_infrafamilial">Infrafamilial</button>
        <button type="button" class="btn  btn-default{{highlight f "f_generic"}}" id="f_generic">Generic</button>
        <button type="button" class="btn  btn-default{{highlight f "f_infrageneric"}}"  id="f_infrageneric">Infrageneric</button>
        <button type="button" class="btn  btn-default{{highlight f "f_specific"}}" id="f_specific">Specific</button>
        <button type="button" class="btn  btn-default{{highlight f "f_infraspecific"}}" id="f_infraspecific">Infraspecific</button>
        <button type="button" class="btn  btn-default{{highlight f "f_hybrid"}}"  id="f_hybrid"> Hybrid</button>
      </div>
      <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Sort by <span class="caret"></span></button>
        <ul class="sort-by dropdown-menu dropdown-menu-right">
          <li class="{{highlight sort "name_asc"}}"><a id="name_asc" href="#">Name A-Z</a></li>
          <li class="{{highlight sort "name_desc"}}"><a id="name_desc" href="#">Name Z-A</a></li>
          <li class="{{highlight sort "published_asc"}}"><a id="published_asc" href="#">Date Published - Oldest first</a></li>
          <li class="{{highlight sort "published_desc"}}"><a id="published_desc" href="#">Date Published - Newest first</a></li>
        </ul>
      </div>
      <button type="button" class="btn btn-info show-detailed-record">{{#if expanded}}Collapse{{else}}Expand{{/if}} Results</button>
      <button type="button" class="btn btn-info download">Download <span class="glyphicon glyphicon-download"></button>
    </div>
    <div class="totalResults inline-block">
      {{totalResults}} results
    </div>
    <div class="loadingResults inline-block hidden">
      <div class="spinner">
        <div class="bounce1"></div>
        <div class="bounce2"></div>
        <div class="bounce3"></div>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
  {{#if expanded}}
    {{> results-list-expanded }}
  {{else}}
    {{> results-list}}
  {{/if}}
  <div class="panel-footer hidden">
    <div class="c-pagination"></div>
    <select class="c-per-page form-control hidden">
      <option {{selected perPage 50}} value="50">50 results per page</option>
      <option {{selected perPage 100}} value="100">100 results per page</option>
      <option {{selected perPage 500}} value="500">500 results per page</option>
    </select>
  </div>
</div>
